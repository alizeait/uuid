{
  "name": "@alizeait/uuid",
  "version": "1.0.0",
  "description": "A fast and tiny RFC compliant uuid v4 generator",
  "scripts": {
    "build:node": "microbundle --entry=src/node/index.node.ts --target=web --format cjs -o dist/node/index.node.js --raw true",
    "build:browser": "microbundle --entry=src/browser/index.browser.ts --target=web --format cjs,es,modern -o dist/browser/index.browser.js --raw true",
    "build": "npm run build:node && npm run build:browser",
    "dev": "microbundle watch",
    "test": "npx jest"
  },
  "main": "dist/node/index.node.js",
  "browser": "dist/browser/index.browser.modern.js",
  "exports": {
    ".": {
      "browser": "./dist/browser/index.browser.modern.js",
      "import": "./dist/node/index.node.js",
      "require": "./dist/node/index.node.js"
    },
    "./node": {
      "import": "./dist/node/index.node.js",
      "require": "./dist/node/index.node.js"
    },
    "./browser": {
      "browser": "./dist/browser/index.browser.modern.js",
      "import": "./dist/browser/index.browser.js",
      "require": "./dist/browser/index.browser.js"
    },
    "./package.json": "./package.json",
    "./": "./"
  },
  "types": "dist/browser/index.browser.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alizeait/index.git"
  },
  "keywords": [
    "uuid",
    "Universally unique identifier",
    "RFC",
    "secure",
    "fast",
    "tiny",
    "crypto",
    "random",
    "node",
    "browser"
  ],
  "author": {
    "name": "Ali Zeaiter",
    "email": "rassoali.arz@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alizeait/uuid/issues"
  },
  "homepage": "https://github.com/alizeait/uuid#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "benchmark": "^2.1.4",
    "codecov": "^3.8.1",
    "is-uuid": "^1.0.2",
    "jest": "^26.6.3",
    "microbundle": "^0.13.0",
    "nanoid": "^3.1.20",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2"
  }
}
